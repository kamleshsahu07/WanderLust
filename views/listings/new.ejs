<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <br />
    <h2> Create a New Listing</h2>
    <br/>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Add a Catchy Title" type="text" class="form-control" required>
        <div class="invalid-feedback">Please enter a Valid Title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter valid and short description</div>
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image url/link" class="form-control" >
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">UPLOAD Image</label>
            <input name="listing[image]" class="form-control" type="file" required>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="price" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a Country Name</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Nagpur Maharashtra" type="text" class="form-control " required>
            <div class="invalid-feedback">Please enter a Valid Location</div>
        </div>
        <button class="btn btn-dark add-btn mt-3">ADD</button>
        <br/>
        <br/>
    </form>
</body>
</div>
</div>

